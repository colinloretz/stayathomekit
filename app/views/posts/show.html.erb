<div class="flex flex-row mb-5 items-center">
  <span class="text-xs bg-black font-bold rounded-2xl text-white py-2 px-3 mr-2 flex content-center justify-center items-center <% if @post.category === "business" %>bg-blue-600<% end %> <% if @post.category === "cause" %>bg-pink-600<% end %> <% if @post.category === "activity" %>bg-green-600<% end %>"><%= @post.category %></span>
   <h3 class="text-xl font-bold"><%= @post.title %></h3>
 </div>

 <% if @post.submitted_by_name.blank? %>
   <p class="text-xs mt-3">Suggested by <span class="text-purple-500 hover:text-purple-900">a fellow #StayHomeBeCreative member</span>, <%= time_ago_in_words(@post.created_at) %> ago</p>
 <% else %>
   <p class="text-xs mt-3">Suggested by <span class="text-purple-500 hover:text-purple-900"><%= @post.submitted_by_name %></span>, <%= time_ago_in_words(@post.created_at) %> ago</p>
 <% end %>
<p class="my-5"><%= @post.body %></p>

<% if @post.link.present? %>
  <p>Find out more at <a class="text-purple-600 hover:text-purple-900" href="<%= @post.link %>" target="_blank"><%= @post.link %></a></p>
<% end %>
