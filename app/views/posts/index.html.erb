<% @posts.each do |post| %>
  <div class="p-5 bg-white rounded-xl shadow-md mb-6">

    <div class="flex flex-row items-center">
       <span class="text-xs bg-black font-bold rounded-2xl text-white py-2 px-3 mr-2 flex content-center justify-center items-center <% if post.category === "business" %>bg-blue-600<% end %> <% if post.category === "cause" %>bg-pink-600<% end %> <% if post.category === "activity" %>bg-green-600<% end %>"><%= post.category %></span>
       <h3 class="text-xl text-purple-500 hover:text-purple-900 font-bold"><%= link_to post.title, category_show_path(category: post.category.pluralize, id: post.id ) %></h3>
     </div>

    <p class="text-xs mt-3">Suggested by <a href="https://twitter.com/colinloretz" target="_blank" class="text-purple-500 hover:text-purple-900">@colinloretz</a>, <%= time_ago_in_words(post.created_at) %> ago</p>
  </div>
<% end %>
